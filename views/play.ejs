<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EchoFlow - Player</title>
    <link rel="stylesheet" href="play.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Top Bar -->
    <div class="barra barra-1"></div>
    <div class="barra barra-2">
        <h1>EchoFlow</h1>
        <nav>
            <a href="index.html">Início</a>
            <a href="perfil.html">Perfil</a>
        </nav>
    </div>

    <!-- Waveform Visualization -->
    <div class="waveform">
        <img src="./imagens/image_large_c2e02b26-d788-48df-86e4-10b2f38ec6f4.jpeg" alt="Waveform Visualization">
    </div>

    <!-- Song Title -->
    <div class="song-title">
        <h2 id="song-name">Dançando com as Sombras</h2>
    </div>

    <!-- Playback Controls -->
    <div class="playback-controls">
        <button class="control-btn rewind">⏪</button>
        <button class="control-btn play-pause">▶️</button>
        <button class="control-btn fast-forward">⏩</button>
    </div>

    <!-- Progress Bar -->
    <div class="progress-bar">
        <div class="progress"></div>
    </div>

    <!-- Small Logo in Bottom-Left -->
    <div class="bottom-logo">
        <img src="path/to/small-logo.png" alt="Small Logo">
    </div>

    <!-- JavaScript to Update Song Title -->
    <script>
        // Get the song name from the URL parameter
        const urlParams = new URLSearchParams(window.location.search);
        const songName = urlParams.get('song') || 'Dançando com as Sombras'; // Default if no parameter
        document.getElementById('song-name').textContent = songName;
    </script>
</body>
</html>